<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <%- include('./parts/navbar.ejs',{active:"movies"}) %>

    <section>
      <% movies.forEach(movie => { %>
      <div class="card">
        <img src="<%= movie.image %>" alt="" />
        <h4><%= movie.title %></h4>
        <p>rating : <%= movie.rating %></p>
        <p>category: <%= movie.category %></p>
       <a href="/movies/<%= movie.id %>"> <button>show more</button></a>
      </div>
      <% }) %>
    </section>
  </body>
</html>
